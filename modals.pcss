.lightbox {
  background-color: color(var(--mine-shaft) alpha(-50%));
  position: absolute;
  left: 0;
  top: 0;
  overflow: auto;
  height: 100%;
  width: 100%;
  z-index: 10;

  .modal {
    background-color: var(--white);
    border-radius: 3px;
    lost-column: 9/15;
    lost-offset: 3/15;
    margin-bottom: 4rem;
    margin-top: 4rem;
    padding: 3rem 4rem;

    .actions {
      display: flex;
      justify-content: space-between;
    }
  }
}
